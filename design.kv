<LoadScreen>:
	name: 'load'
	lbl_action: lbl_action
	pgr_load_progress: pgr_load_progress
	lbl_info: lbl_info

	background_color: [0, 0, 0, 1]
	canvas.before:
		Color:
			rgba: self.background_color
		Rectangle:
			size: self.size
			pos: self.pos

	FloatLayout:
		Image:
			size_hint: (0.6, 0.3)
			pos_hint: {'x':0.2, 'y':0.65}
			source: 'design/logo_lock.png'
			allow_stretch: True
			
		LabelThirdFont:
			id: lbl_action
			size_hint: (0.6, 0.05)
			pos_hint: {'x':0.2, 'y':0.55}
			color: [1, 1, 1, 1]
			font_size: '36sp'
			bold: True
			halign: 'center'

		ProgressBar:
			id: pgr_load_progress
			size_hint: (0.6, 0.05)
			pos_hint: {'x':0.2, 'y':0.5}
			max: 100
			value: 0
			
		ScrollView:
			size_hint: (0.6, 0.45)
			pos_hint: {'x':0.2, 'y':0.05}
			effect_cls: ScrollEffect
			do_scroll_x: False
			do_scroll_y: True
			bar_width: 10
			bar_color: [1, 1, 1, 1]
			bar_inactive_color: [0.5, 0.5, 0.5, 1]
			bar_margin: -20

			LabelThirdFont:
				id: lbl_info
				size_hint_y: None
				height: self.texture_size[1]
				text_size: (self.width, None)
				color: [1, 1, 1, 1]
				font_size: '32sp'
				halign: 'justify'

		LabelThirdFont:
			text: 'v2.2 30/06/2023'
			text_size: self.size
			size_hint: (1, 0.05)
			pos_hint: {'x':0, 'y':0}
			color: [1, 1, 1, 1]
			font_size: '24sp'
			halign: 'right'
			padding: (10, 10)

