	canvas.before:
		Color:
			rgba: self.background_color
		Rectangle:
			size: self.size
			pos: self.pos
	FloatLayout:

		Scatter:
			id: scatter
			auto_bring_to_front: False
			do_rotation: False
			do_escale: True
			scale_min: 1
			scale_max: 3
			on_transform_with_touch: root.on_change()
			
